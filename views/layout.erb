<html>
<head>
  <title>Foundation is da bomb.</title>
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/foundation.min.css">
  <link rel="stylesheet" href="/css/style.css">

  <script src="/js/vendor/modernizr.js"></script>
</head>

  <body>
    <div id="banner">
      <div class="small-6 medium-12 small-centered columns">
        <div class="nav-bar right">
         <ul class="button-group">
           <% if current_user.present? %>
             <li><a href="/sign_out" class="button small round">Sign Out</a></li>
             <% else %>
               <li><a href="/auth/github" class="button small round">Sign In</a></li>
            <% end %>
          </ul>
        </div>
          <h1><a href="/">Dave Simel</a><small></small></h1>
          <hr/>
      </div>

    <% flash.keys.each do |type| %>
      <div data-alert class="flash <%= type %> alert-box radius">
        <%= flash[type] %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %>

    <div class="container">
          <%= yield %>
    </div>


    <script src="/js/vendor/jquery.js"></script>
    <script src="/js/foundation.min.js"></script>

    <script>
      $(document).foundation();
    </script>
  </body>
</html>
